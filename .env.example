# ==================================
# Beacon Environment Configuration
# ==================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ==================================
# Database
# ==================================
# PostgreSQL connection string
# For local: postgresql://user:password@localhost:5432/beacon
# For Neon: postgresql://user:password@ep-xxx.region.neon.tech/beacon?sslmode=require
DATABASE_URL="postgresql://postgres:password@localhost:5432/beacon"

# ==================================
# NextAuth.js Authentication
# ==================================
# Generate a secure secret: openssl rand -base64 32
NEXTAUTH_SECRET="your-secure-secret-key-here"

# Base URL of your application
NEXTAUTH_URL="http://localhost:3000"

# ==================================
# Application URLs
# ==================================
# Public URL for your app (used in redirects)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Site URL for SEO and metadata
NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# ==================================
# Google OAuth (Optional)
# ==================================
# Create credentials at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# ==================================
# Stripe Integration
# ==================================
# Get keys from: https://dashboard.stripe.com/apikeys
# Use test keys for development (sk_test_xxx)
STRIPE_SECRET_KEY=""

# Stripe Connect OAuth client ID
# Get from: https://dashboard.stripe.com/settings/connect
STRIPE_CLIENT_ID=""

# Webhook signing secret
# Get from: https://dashboard.stripe.com/webhooks (or use Stripe CLI for local dev)
STRIPE_WEBHOOK_SECRET=""

# ==================================
# HubSpot Integration
# ==================================
# Create an app at: https://developers.hubspot.com/
# Required scopes: oauth, crm.objects.contacts.read, crm.objects.companies.read,
#                  crm.objects.deals.read, sales-email-read
HUBSPOT_CLIENT_ID=""
HUBSPOT_CLIENT_SECRET=""

# ==================================
# Security
# ==================================
# Encryption key for storing OAuth tokens
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=""

# ==================================
# Optional: Cron Job Security
# ==================================
# Used to secure cron endpoints (e.g., daily snapshots)
# CRON_SECRET=""

# ==================================
# Optional: Email Service
# ==================================
# For transactional emails (password reset, notifications)
# Uncomment and configure when ready for production
# RESEND_API_KEY=""
# EMAIL_FROM="noreply@yourdomain.com"
